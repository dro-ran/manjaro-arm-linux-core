--- a/arch/arm64/boot/dts/rockchip/rk3399-rock-pi-4b.dts
+++ b/arch/arm64/boot/dts/rockchip/rk3399-rock-pi-4b.dts
@@ -14,6 +14,34 @@
 	aliases {
 		mmc2 = &sdio0;
 	};
+
+	/* 25MHz clock for imx477 */
+	cam_clk: cam_clk {
+		compatible = "fixed-clock";
+		clock-frequency = <24000000>;
+		#clock-cells = <0>;
+        status = "okay";
+	};
+
+	cam1_reg: cam1_regulator {
+		compatible = "regulator-fixed";
+		regulator-name = "cam1-reg";
+		pinctrl-names = "default";
+		enable-active-high;
+		regulator-min-microvolt = <2800000>;
+		regulator-max-microvolt = <2800000>;
+		gpio = <&gpio1 RK_PB5 GPIO_ACTIVE_HIGH>;
+		pinctrl-0 = <&cam_gpio1>;
+		vin-supply = <&vcc3v3_sys>;
+		startup-delay-us = <300000>;
+		status = "okay";
+	};
+
+	cam_dummy_reg: cam_dummy_reg {
+		compatible = "regulator-fixed";
+		regulator-name = "cam-dummy-reg";
+		status = "okay";
+	};
 };
 
 &sdio0 {
@@ -47,3 +75,77 @@
 		vddio-supply = <&vcc_1v8>;
 	};
 };
+
+/* Configure GPIO for CAM_GPIO1 pin */
+&pinctrl {
+	camera_ctrl {
+		cam_gpio1: cam_gpio1 {
+			rockchip,pins = <1 RK_PB5 RK_FUNC_GPIO &pcfg_output_low>;
+		};
+	};
+};
+
+/* Set Camera IF Vcc to 3.3v */
+&vcc_cam {
+	regulator-min-microvolt = <3300000>;
+	regulator-max-microvolt = <3300000>;
+};
+
+/* I2C4 port setting for Camera IF */
+camera: &i2c4 {
+	#address-cells = <1>;
+	#size-cells = <0>;
+	status = "okay";
+
+	imx477: imx477@1a {
+        compatible = "sony,imx477";
+        reg = <0x1a>;
+        status = "okay";
+
+        clocks = <&cam_clk>;
+        clock-names = "xclk";
+
+        VANA-supply = <&cam1_reg>;	/* 2.8v */
+        VDIG-supply = <&cam_dummy_reg>;	/* 1.05v */
+        VDDL-supply = <&cam_dummy_reg>;	/* 1.8v */
+
+        rotation = <180>;
+        orientation = <2>;
+
+		port {
+			camera_out: endpoint {
+				remote-endpoint = <&csi1_ep1>;
+				data-lanes = <1 2>;
+                clock-lanes = <0>;
+                clock-noncontinuous;
+                link-frequencies =
+                    /bits/ 64 <450000000>;
+			};
+		};
+	};
+};
+
+/* Add override for support rkisp1 and remote endpoint */
+&isp0 {
+	status = "okay";
+
+	ports {
+		port@0 {
+			csi1_ep1: endpoint@0 {
+				reg = <0>;
+				remote-endpoint = <&camera_out>;
+				data-lanes = <1 2>;
+				clock-lanes = <0>;
+				clock-noncontinuous;
+			};
+		};
+	};
+};
+
+&isp0_mmu {
+	status = "okay";
+};
+
+&mipi_dphy_rx0 {
+	status = "okay";
+};
